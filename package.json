{
  "name": "remark-shiki-highlight-api",
  "version": "0.3.6",
  "description": "Remark plugin for shiki-highlight-api - replaces traditional Shiki code blocks with CSS Custom Highlight API",
  "keywords": [
    "remark",
    "remark-plugin",
    "shiki",
    "syntax-highlighting",
    "highlight-api",
    "markdown",
    "mdx"
  ],
  "author": "Steve Hill <steve@stevehill.xyz>",
  "license": "MIT",
  "homepage": "https://github.com/shiki-highlights/remark-shiki-highlight-api#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shiki-highlights/remark-shiki-highlight-api.git"
  },
  "bugs": {
    "url": "https://github.com/shiki-highlights/remark-shiki-highlight-api/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "npm run test:unit && npm run test:browser",
    "test:unit": "vitest run",
    "test:browser": "playwright test",
    "test:browser:headed": "playwright test --headed",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "playwright:install": "playwright install chromium",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepublishOnly": "npm run build && npm test"
  },
  "dependencies": {
    "shiki": "^3.14.0",
    "shiki-highlight-api": "^1.0.5",
    "unist-util-visit": "^5.0.0"
  },
  "peerDependencies": {
    "unified": ">=10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.56.1",
    "@types/mdast": "^4.0.0",
    "@types/node": "^24.10.0",
    "@types/unist": "^3.0.3",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.7",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "mdast": "^3.0.0",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "rehype-stringify": "^10.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.46.3",
    "vitest": "^4.0.7"
  }
}
